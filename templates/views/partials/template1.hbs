<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/play">&larr; back to the games</a></p>
				<hr>
				<header>
					<h1>TEMPLATE 1</h1>
					<h2>{{data.record.title}}</h2>
					<h5>
						{{{categoryList @root.data.route data.record.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="game">
					{{#if data.record.image}}<img src="{{{cloudinaryUrl data.record.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					{{{data.record.content.extended}}}
				</div>
			</article>
		</div>
	</div>
</div>
